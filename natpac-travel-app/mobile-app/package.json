{
  "name": "natpac-travel-mobile",
  "version": "1.0.0",
  "description": "NATPAC Travel Data Collection Mobile App",
  "private": true,
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "start": "react-native start",
    "start:reset": "react-native start --reset-cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e:build:ios": "detox build -c ios.sim.debug",
    "e2e:test:ios": "detox test -c ios.sim.debug",
    "e2e:build:android": "detox build -c android.emu.debug",
    "e2e:test:android": "detox test -c android.emu.debug",
    "pod:install": "cd ios && pod install && cd ..",
    "clean": "react-native-clean-project",
    "android:clean": "cd android && ./gradlew clean && cd ..",
    "android:build:debug": "cd android && ./gradlew assembleDebug && cd ..",
    "android:build:release": "cd android && ./gradlew assembleRelease && cd ..",
    "android:bundle:release": "cd android && ./gradlew bundleRelease && cd ..",
    "ios:build:debug": "cd ios && xcodebuild -workspace NatpacTravel.xcworkspace -scheme NatpacTravel -configuration Debug && cd ..",
    "ios:build:release": "cd ios && xcodebuild -workspace NatpacTravel.xcworkspace -scheme NatpacTravel -configuration Release && cd ..",
    "codepush:ios": "appcenter codepush release-react -a NATPAC/NatpacTravel-iOS -d Production",
    "codepush:android": "appcenter codepush release-react -a NATPAC/NatpacTravel-Android -d Production",
    "type-check": "tsc --noEmit",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'"
  },
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "xcodebuild -workspace ios/NatpacTravel.xcworkspace -scheme NatpacTravel -configuration Release -sdk iphoneos build"
  },
  "keywords": [
    "natpac",
    "travel",
    "tracking",
    "kerala",
    "transportation"
  ],
  "author": "NATPAC - KSCSTE, Government of Kerala",
  "license": "MIT"
}
