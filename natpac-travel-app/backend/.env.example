# NATPAC Travel App - Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=natpac_travel_db
DB_USER=natpac_user
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_character_iv_here

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Firebase (for mobile push notifications - optional)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# AWS Configuration (for file storage - optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=natpac-travel-data

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Admin Configuration
ADMIN_EMAIL=admin@natpac.gov.in
ADMIN_PASSWORD=secure_admin_password

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100

# Background Jobs
REDIS_URL=redis://localhost:6379
JOB_CONCURRENCY=5

# Data Export Configuration
MAX_EXPORT_RECORDS=100000
EXPORT_RETENTION_DAYS=7

# Mobile App Configuration
ANDROID_PACKAGE_NAME=gov.kerala.natpac.travel
IOS_BUNDLE_ID=gov.kerala.natpac.travel

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Development Only
DEBUG_MODE=false