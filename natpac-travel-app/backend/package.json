{
  "name": "natpac-travel-backend",
  "version": "1.0.0",
  "description": "Backend API for NATPAC Travel Data Collection App",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write '**/*.{js,json,md}'",
    "seed": "node src/scripts/seed.js",
    "db:reset": "node src/scripts/reset-db.js",
    "migrate": "node src/scripts/migrate.js",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t natpac-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env natpac-backend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs"
  },
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:setup": "node scripts/setup-db.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "keywords": [
    "natpac",
    "travel",
    "transportation",
    "data-collection",
    "kerala",
    "gps",
    "trip-tracking"
  ],
  "author": "NATPAC - KSCSTE, Government of Kerala",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kscste-natpac/travel-app-backend.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
