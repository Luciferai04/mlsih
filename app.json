{
  "expo": {
    "name": "NATPAC Travel Survey",
    "slug": "natpac-travel-survey",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to track your travel patterns for NATPAC research.",
        "NSLocationAlwaysUsageDescription": "This app uses location to track your travel patterns for NATPAC research.",
        "NSMotionUsageDescription": "This app uses motion sensors to improve trip detection accuracy."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "backendUrl": "http://localhost:4001",
      "mlServiceUrl": "http://localhost:8001"
    },
    "plugins": [
      "expo-location",
      "expo-notifications"
    ]
  }
}